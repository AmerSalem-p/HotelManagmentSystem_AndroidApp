<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/reservationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="#0F5287"
            android:padding="5dp"
            android:textSize="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/reservationInfo"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            android:textColor="#0F5287"
            android:padding="5dp"
            android:textSize="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/reservationDate"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            android:textColor="#0F5287"
            android:padding="5dp"
            android:textSize="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/leaveDate"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            android:textColor="#0F5287"
            android:padding="5dp"
            android:textSize="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/checkedInDate"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            android:textColor="#0F5287"
            android:padding="5dp"
            android:textSize="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/checkedOutDate"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            android:textColor="#0F5287"
            android:padding="5dp"
            android:textSize="16dp"
            />

        <Button
            android:id="@+id/cancelReservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#1B73BA"
            android:text="Cancel Reservation"
            android:onClick="btnCancle"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>